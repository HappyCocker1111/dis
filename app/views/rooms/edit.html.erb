<h2>チャットを編集する</h2>
<hr>
<%= form_for @room do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, :class => "form_control my-form", :placeholder => "名前を入力してください" %>
  <br>
  <%= f.label :explain %>
  <%= f.text_area :explain, :class => "form_control my-form", :size => "30x10", :placeholder => "説明を入れてください" %>
  <br>
  <%= f.submit "変更する", :class => "btn btn-success"%>
<% end %>
<hr>
<p><a href="/rooms/<%= @room.id %>" class="btn btn-primary">チャット情報に戻る</a></p>
<p><a href="/" class="btn btn-info">トップに戻る</a></p>